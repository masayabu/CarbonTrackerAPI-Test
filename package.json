{
  "name": "carbontracker-api-test",
  "version": "1.0.0",
  "description": "Carbon Tracker API Test - Simple Azure Functions v4",
  "main": "dist/index.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc && npm run copy-config",
    "copy-config": "cp src/config.*.json dist/",
    "watch": "tsc -w",
    "clean": "rimraf dist",
    "prestart": "npm run build",
    "start": "func start",
    "dev": "npm run build && func start",
    "dev:watch": "nodemon",
    "dev:hot": "npm run watch & func start",
    "deploy:dev": "NODE_ENV=development func azure functionapp publish carbontracker-api-linux --javascript",
    "deploy:prod": "NODE_ENV=production func azure functionapp publish carbontracker-api-linux-new --javascript"
  },
  "dependencies": {
    "@azure/data-tables": "^13.3.1",
    "@azure/functions": "^4.7.0",
    "@azure/storage-blob": "^12.28.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/uuid": "^10.0.0",
    "bcryptjs": "^3.0.2",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.1",
    "azure-functions-core-tools": "^4.0.5455",
    "nodemon": "^3.0.2",
    "rimraf": "^5.0.5",
    "typescript": "^5.8.3"
  }
}
